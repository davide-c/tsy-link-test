{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "strict": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",

    "lib": ["es6", "es7", "dom", "esnext"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.d.ts"]
}
