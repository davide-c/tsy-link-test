{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "strict": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "lib": ["es6", "es7", "dom", "esnext"]
  },
  "exclude": ["**/*.d.ts"]
}
